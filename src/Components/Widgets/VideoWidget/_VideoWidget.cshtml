@using DotStark.XBK.VideoWidget
@using Kentico.PageBuilder.Web.Mvc
@using Kentico.Web.Mvc
@model VideoWidgetViewModel

@if (Model == null || string.IsNullOrEmpty(Model.VideoUrl) && string.IsNullOrEmpty(Model.EmbedCode))
{
    @if (Context.Kentico().PageBuilder().EditMode)
    {
        <p class="text-center">please configure widget properties.</p>
    }
}
else if (Model.IsVisible)
{
    <div class="@Model.CssClass">
        @if (!string.IsNullOrEmpty(Model.VideoUrl))
        {
            <div class="url-iframe">
                <iframe src="@Model.VideoUrl" width="100%" height="100%" scrolling="no" frameborder="0" allowtransparency="true" allowfullscreen="true"></iframe>
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.EmbedCode))
        {
            <div class="embed-iframe">
                @Html.Raw(Model.EmbedCode)
            </div>
        }
    </div>
}